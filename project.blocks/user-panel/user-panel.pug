include ../dropdown/dropdown
include ../button/button

-
  var expandable_checkbox_list = [
    {title: "Выход", link: "https://yandex.ru/"}
  ]

mixin addUserPanel(logged)
  .user-panel
    if logged
      .user-panel__box(data-logged="true")
        .user-panel__line
        .user-panel__user-name
          +addDropdown('Имя пользователя', {dropdown_elem_no_border: "dropdown__elem_no-border", dropdown_elem_elastic: "dropdown__elem_elastic", dropdown_top_no_arrow: "dropdown__top_no-arrow"}, false, expandable_checkbox_list)
    else
      .user-panel__box(data-logged="false")
        .user-panel__buttons
          .user-panel__button.user-panel__button_sign-in
            +addButton("Войти", "id-but-1", "button__elem_opaque-border button__elem_small-height", "button__content_padding", "purple_text")
          .user-panel__button.user-panel__button_sign-up
            +addButton("Зарегистрироваться", "id-but-2", "button__elem_opaque-background button__elem_small-height", "button__content_padding", "button__text_white")