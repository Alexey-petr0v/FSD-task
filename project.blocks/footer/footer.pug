  var footer_links_2 = [
    {link: "https://yandex.ru/", text: "О сервисе"},
    {link: "https://yandex.ru/", text: "Наша команда"},
    {link: "https://yandex.ru/", text: "Вакансии"},
    {link: "https://yandex.ru/", text: "Инвесторы"}
  ]

-
  var footer_links_3 = [
    {link: "https://yandex.ru/", text: "Соглашения"},
    {link: "https://yandex.ru/", text: "Сообщества"},
    {link: "https://yandex.ru/", text: "Связь с нами"}
