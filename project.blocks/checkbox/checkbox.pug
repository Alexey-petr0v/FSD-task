mixin addCheckboxElem(title, text)
  if text
    .checkbox__rich
      p.checkbox__title= title
      p.checkbox__text= text
  else if title
    p.checkbox__title= title

mixin addCheckbox(items)
  - for (var x = 0; x < items.length; x++)
    if items[x].toggle
      - var mod = "checkbox__item_toggle"
      - var input_mod = ""
    else if items[x].like
      - var mod = "checkbox__item_like purple_text"
      - var input_mod = "material-icons md-24"
    else
      - var mod = ""
      - var input_mod = ""
    .checkbox__item(class=mod)
      label
        if items[x].value
          input(name=items[x].name, class="checkbox__input "+input_mod, type="checkbox", checked)
          +addCheckboxElem(items[x].title, items[x].text)
        else
          input(name=items[x].name, class="checkbox__input "+input_mod, type="checkbox")
          +addCheckboxElem(items[x].title, items[x].text)