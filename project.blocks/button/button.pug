mixin addButton(text, id, elem_mods, content_mods, text_mods, arrow_forward)
  .button
    .button__elem(class=elem_mods)
      .button__content(class=content_mods, id=id)
        h3.button__text(class=text_mods)= text
        if arrow_forward
          .button__arrow
            h3.material-icons.md-24= "arrow_forward"