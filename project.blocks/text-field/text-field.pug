include ../../library.blocks/field/field

mixin addTextField(placeholder, title, fieldMod, textFieldMod)
    +addField(title, fieldMod)
        .text-field
            case fieldMod
                when NULL
                    input.text-field__elem(class=textFieldMod, type="text", placeholder=placeholder)
                when 0
                    input.text-field__elem(class=textFieldMod, type="text", placeholder=placeholder)
                default
                    input.text-field__elem(class=textFieldMod, type="text", placeholder=placeholder)